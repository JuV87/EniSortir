{% extends 'base.html.twig' %}



{% block body %}
    <br><br>
    <h1>Détails du profil</h1>
    <h3>{{ user.pseudo }}</h3>
    <img src="{{ asset('uploads/article_image/'~ user.photo ) }}" width="200" height="200" >
    <article>
        <br>
        <div>Prénom: {{ user.prenom }}</div>
        <div>Nom: {{ user.nom }}</div>
        <div>Téléphone: {{ user.telephone }}</div>
        <div>Email: {{ user.email }}</div>
        <div>Ville de rattachement: {{ user.location.name }}</div>
    </article>
    <br>
    <a  class="btn btn-primary" href="{{ path ('user_modify_profile') }}"> Modifier </a>

{% endblock %}

{% block title %}
    {{ parent() }} | Détail profil
{% endblock %}