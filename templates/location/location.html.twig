{% extends 'base.html.twig' %}

{% block title %}Gérer les sites{% endblock %}

{% block body %}
    <h1>Gérer les sites</h1>

    <div>
        <h2>Filtrez les sites</h2>
        {{ form_start(searchForm) }}
        {{ form(searchForm) }}
        {{ form_end(searchForm) }}
    </div>
    <div>
        <h1>Liste des sites</h1>
        <table style="border: black 1px solid">
            <tr style="border: black 1px solid">
                <th>Ville</th>
                <th>Actions</th>
            </tr>
            {% for l in allLocation %}
                <tr style="border: black 1px solid">
                    <td>{{ l.name }}</td>

                    <td>
                        <a href="#">Modifier</a>
                        <a href="#">Supprimer</a>
                    </td>
                </tr>

            {% endfor%}

        </table>
    </div>


{% endblock %}
